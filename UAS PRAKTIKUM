   "source": [
    "# 6. Translasi\n",
    "def translate_image(img, x, y):\n",
    "    M = np.float32([[1, 0, x], [0, 1, y]])\n",
    "    translated = cv2.warpAffine(img, M, (img.shape[1], img.shape[0]))\n",
    "    return translated"
   ]
  },
