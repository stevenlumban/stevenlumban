   "source": [
    "# 3. Resize\n",
    "def resize_image(img, scale_factor):\n",
    "    width = int(img.shape[1] * scale_factor)\n",
    "    height = int(img.shape[0] * scale_factor)\n",
    "    resized = cv2.resize(img, (width, height), interpolation=cv2.INTER_LINEAR)\n",
    "    return resized"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
