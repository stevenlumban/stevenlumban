   "source": [
    "# 2. Rotasi\n",
    "def rotate_image(img, angle):\n",
    "    (h, w) = img.shape[:2]\n",
    "    center = (w / 2, h / 2)\n",
    "    M = cv2.getRotationMatrix2D(center, angle, 1.0)\n",
    "    rotated = cv2.warpAffine(img, M, (w, h))\n",
    "    return rotated\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "487ea9b4-4975-4291-be3d-19b3cb7bb7cd",
   "metadata": {},
   "outputs": [],
   "source": [
    "rotated_img = rotate_image(img, 45)\n",
    "show_image('Rotated', rotated_img)"
   ]
  },
  {
